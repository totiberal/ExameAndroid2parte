<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="exame.exameparte2_a14albertoab.Pedidos"
    android:orientation="vertical">
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:checked="true"
            android:id="@+id/id5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5€"
            android:layout_weight="1" />
        <RadioButton
            android:id="@+id/id10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10€"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/id15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15€"
            android:layout_weight="1"/>
    </RadioGroup>

    <Spinner
        android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
        android:id="@+id/idSpinnerF"></Spinner>
    <Spinner
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idSpinnerC"></Spinner>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elixe froitas ou carne en funcion do que queiras engadir"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:checked="true"
            android:id="@+id/idCarnes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carnes"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/idFrutas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frutas"
            android:layout_weight="1"/>
    </RadioGroup>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Engadir"
            android:id="@+id/idEngadir" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carrito"
            android:id="@+id/idCarrito" />
    </LinearLayout>
</LinearLayout>
